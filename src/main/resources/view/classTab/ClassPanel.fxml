<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>
<HBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <VBox fx:id="displayInformationViewContainer" styleClass="pane-transparent" HBox.hgrow="NEVER">
    <ListView fx:id="displayInformationView" minWidth="0" prefWidth="0" HBox.hgrow="NEVER" VBox.vgrow="ALWAYS" />
  </VBox>

  <HBox VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
    <!-- Classes -->
    <VBox fx:id="classes" styleClass="pane-with-border" minWidth="500"
          VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
      <padding>
        <Insets right="10" bottom="30" left="10" />
      </padding>
      <Label fx:id="classLabel" styleClass="classLabel" text="Your classes" alignment="TOP_CENTER"/>
      <StackPane fx:id="tuitionClassListPlaceholder" styleClass="pane-transparent" HBox.hgrow="ALWAYS" />
    </VBox>

    <!-- Students -->
    <VBox fx:id="students" styleClass="pane-with-border" minWidth="500"
          VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
      <padding>
        <Insets right="10" bottom="30" left="10" />
      </padding>
      <Label fx:id="studentLabel" styleClass="studentLabel" text="Students" alignment="TOP_CENTER"/>
      <StackPane fx:id="studentListPlaceholder" styleClass="pane-transparent" HBox.hgrow="ALWAYS" />
    </VBox>
  </HBox>
</HBox>
